# =============================================================================
# AutoContentor Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=AutoContentor
APP_VERSION=0.1.0
APP_ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=autocontentor
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# API Keys and External Services
# =============================================================================
# Google API (for Google Trends, Search Console, etc.)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# OpenAI API (for LLM processing)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API (Google's LLM)
GEMINI_API_KEY=your_gemini_api_key_here

# SerpAPI (for search results)
SERPAPI_KEY=your_serpapi_key_here

# Social Media APIs (optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=AutoContentor/1.0

# =============================================================================
# Service Configuration
# =============================================================================
# Orchestrator Service
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_WORKERS=1

# Agent Services
KEYWORD_AGENT_HOST=0.0.0.0
KEYWORD_AGENT_PORT=8001

AUDIENCE_AGENT_HOST=0.0.0.0
AUDIENCE_AGENT_PORT=8002

COMPETITOR_AGENT_HOST=0.0.0.0
COMPETITOR_AGENT_PORT=8003

TREND_AGENT_HOST=0.0.0.0
TREND_AGENT_PORT=8004

AGGREGATOR_AGENT_HOST=0.0.0.0
AGGREGATOR_AGENT_PORT=8005

# =============================================================================
# Security Settings
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Rate Limiting and Timeouts
# =============================================================================
API_RATE_LIMIT=100
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# =============================================================================
# Report Generation
# =============================================================================
REPORT_OUTPUT_DIR=./reports
REPORT_TEMPLATE_DIR=./templates
MAX_REPORT_SIZE_MB=50

# =============================================================================
# Development Settings
# =============================================================================
# Set to true to enable development features
DEV_MODE=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Testing
TEST_DATABASE_URL=mongodb://localhost:27017/autocontentor_test
TEST_REDIS_URL=redis://localhost:6379/1
